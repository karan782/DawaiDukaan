@model DAL.Models.getcustomerbyemail_Result
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/User/Shared/_LayoutPageUser.cshtml";
}

<div class="has-bg-img">
    <img class="bg-img img-fluid" src="~/Images/home.jpg" alt="...">
</div>
<div class="bg-text" style="overflow-x:auto;">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success" id="success-alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
            <strong>Success! </strong>@TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ; style="float:right">
            </button>
        </div>
    }
    <br />
   
    <div class="row g-0">
        <div class="col-md-4" ">
            <img src="/images/userlogo.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body" style="padding-left:6vw;">

                <h5 class="card-title" style="color:gold; font-size:3vw; font-family:Rockwell">@Model.CustName</h5>
                <br />
                <p class="card-text"><span style="color:gold">Customer ID:</span>  @Model.CustId</p>
                <p class="card-text"><span style="color:gold">E-Mail:    </span>  @Model.Email</p>
                <p class="card-text"><span style="color:gold">Country:   </span>  @Model.Country</p>
                <p class="card-text"><span style="color:gold">Pin Code: </span>   @Model.PinCode</p>
                <p class="card-text"><span style="color:gold">Contact:   </span>  @Model.Contact</p>
                <br />
                @*<p class="add-btn" style="padding-bottom: 10px;">
                    @Html.ActionLink("Update Details", "UpdateUser", "User", new { id = Model.CustId }, new { @class = "btn btn-success" })
                </p>*@
                <p class="add-btn" style="padding-bottom: 10px;">
                    @Html.ActionLink("Delete User", "DeleteUser", "User", new { id = Model.CustId }, new { @class = "btn btn-danger" })
                </p>
            </div>
        </div>
    </div>

</div>